/* pages/todo/todo.wxss */
.container {
  padding: 0;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.todo-swiper{
  width: 750rpx;
  height: 100%;
}

.todo-list {
  width: 100%;
  height: 95%;
}
.todo-swiper-tab {
  position: absolute;
  bottom: 0;
}
.todo-swiper-tab .swiper-tab-item {
  display: inline-block;
  /* background-color: rgba(59, 82, 90, 1); */
  width: 375rpx;
  font-size: 14px;
  text-align: center;
  color: #fff;
  padding: 6rpx 0;
}
.active {
  background-color: #20b2aa;
}
.todo-item {
  width: 690rpx;
  /* height: 200rpx; */
  /* border: 1px solid #20b2aa; */
  margin: 0 0 0 36rpx;
  padding: 20rpx 0 20rpx 10rpx;
  font-size: 0;
  display: flex;
  flex-direction: row;
}
.todo-option-icon {
  width: 20px;
  height: 20px;
  margin-top: 6rpx;
  margin-right: 6rpx;
  font-size: 14px;
  flex: 0 0 20px;
}
.todo-item-content {
  flex: 1;
  color: #eee;
  font-size: 14px;
  vertical-align: top;
  margin-left: 10px;
}
.todo-item-content-time {
  font-size: 10px;
  color: #eee
}
.todo-completed {
  text-decoration: line-through;
}
.add-todo {
  width: 40px;
  height: 40px;
  position: absolute;
  bottom: 80rpx;
  right: 40rpx;
  border-radius: 50%;
  font-size: 20px;
  line-height: 40px;
  text-align: center;
  color: #fff;
  background-color: #20b2aa;
}
.add-todo-hover {
  background-color: #1ea19b;
}
.add-todo-input-wrapper {
  width: 100%;
  /* height: 220rpx; */
  background-color: #fff;
  position: absolute;
  bottom: 0;
  z-index: 101;
  color: #000;
  padding-bottom: 40rpx;
}
.add-todo-input {
  height: 60rpx;
  padding: 0 0 0 10rpx;
}
.picker-label {
  font-size: 14px;
  font-weight: bold;
}
.picker {
  font-size: 14px;
}
.add-todo-date {
  padding: 10rpx 20rpx;
}
.add-todo-time {
  padding: 10rpx 20rpx;
  position: relative;
  /* justify-content: space-around; */
}
.add-todo-unfold-icon {
  display: block;
  width: 40px;
  height: 30px;
  position: relative;
  left: 650rpx;
}
.add-todo-send-icon {
  width: 20px;
  height: 20px;
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
}